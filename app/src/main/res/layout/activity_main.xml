<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maps API"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <GridLayout
        android:id="@+id/button_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="3dp"
        android:layout_marginTop="3dp">

        <Button
            android:id="@+id/add_marker_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/amarillo"
            android:text="Añadir Marcador"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="0"/>

        <Button
            android:id="@+id/list_markers_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/amarillo"
            android:text="Marcadores"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="1"/>

        <Spinner
            android:id="@+id/map_type_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"/>

        <Button
            android:id="@+id/another_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/amarillo"
            android:text="Ubicación"
            android:textColor="@color/black"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"/>
    </GridLayout>


    <fragment
        android:id="@+id/fragmentMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="553dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="178dp"
        android:layout_below="@id/button_grid"
        tools:context=".MainActivity" />

</RelativeLayout>
